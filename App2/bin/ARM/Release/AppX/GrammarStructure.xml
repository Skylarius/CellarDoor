<grammar version="1.0" xml:lang="it" root="authenticate"
 xmlns="http://www.w3.org/2001/06/grammar">

  <rule id="authenticate">
    <one-of>
      <item> authentica </item>
      <item> autenticami </item>
      <item> sono io </item>
      <item> ciao </item>
      <item> apriti sesamo </item>
      <item> fidelio </item>
      <item> mi manda walt disney </item>
    </one-of>
  </rule>
  
  <rule id="yes">
    <one-of>
      <item> sì </item>
      <item> okay </item>
      <item> affermativo </item>
      <item> certo </item>
      <item> va bene </item>
      <item> d'accordo </item>
    </one-of>
  </rule>

  <rule id="no">
    <one-of>
      <item> no </item>
      <item> negativo </item>
      <item> annulla </item>
      <item> non se ne parla </item>
      <item> ma anche no </item>
      <item> zero </item>
    </one-of>
  </rule>
  
  
  
  
  
  

</grammar>